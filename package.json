{
  "name": "hass-mcp",
  "type": "module",
  "version": "0.1.2",
  "packageManager": "pnpm@10.28.2",
  "description": "MCP server for Home Assistant (REST/WebSocket) control.",
  "author": "Han Lee",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hannoeru/hass-mcp.git"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "hass-mcp": "bin/hass-mcp.js"
  },
  "files": [
    "LICENSE",
    "README.md",
    "bin",
    "dist"
  ],
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "node --watch --enable-source-maps ./dist/index.js",
    "build": "tsc -p tsconfig.build.json",
    "prepublishOnly": "pnpm build",
    "lint": "eslint .",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "release": "bumpp --commit --tag --push",
    "publish:ci": "tsx scripts/publish.ts",
    "start": "node --enable-source-maps ./dist/index.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "home-assistant-js-websocket": "^9.4.0",
    "zod": "^3.25.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.0.0",
    "@types/node": "^22.0.0",
    "bumpp": "^10.4.0",
    "eslint": "^9.0.0",
    "eslint-plugin-format": "^0.1.2",
    "tsx": "^4.21.0",
    "typescript": "^5.4.5",
    "vitest": "^2.1.9"
  }
}
